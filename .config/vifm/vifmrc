colorscheme zenburn_1

filetype *.jpg,*.jpeg,*.png,*.gif feh %f 2>/dev/null &

filetype *.pdf zathura %f 2>/dev/null &

filetype *.html firefox-nightly %f 2> /dev/null &

fileviewer *.tar,*.tar.gz,*.tgz
 \ tar -tvf %c

fileviewer *.png,*.jpeg,*.jpg
 \ img2txt %c

fileviewer *.pdf
\ pdftotext %c -

fileviewer *.html
 \ w3m %c

set statusline="  %t%= %A %10u:%-7g %15E %20d  "
